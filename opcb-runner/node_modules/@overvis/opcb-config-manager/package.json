{
  "name": "@overvis/opcb-config-manager",
  "version": "0.0.1",
  "license": "private",
  "private": true,
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*",
    "db-migrations/**/*"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.13.0",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.22",
    "pino": "^8.10.0",
    "pino-pretty": "^9.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@overvis/opcb-ts-shared": "*",
    "@sinclair/typebox": "^0.25.24",
    "better-sqlite3": "^8.3.0",
    "dotenv": "^16.0.3",
    "fecha": "^4.2.3"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo || true",
    "watch": "nodemon ./src/start.ts",
    "test-redis": "docker run --rm --mount type=bind,source=$PWD/../opcb-deploy/dev/redis.conf,destination=/redis.conf -p 6379:6379 --name opcb-conf-manager-test-redis redis:7 /redis.conf",
    "dev": "concurrently --kill-others \"tsc -w --preserveWatchOutput -p ./tsconfig.json\" \"tsc -w --preserveWatchOutput -p ../opcb-ts-shared/tsconfig.json\" \"yarn test-redis\" \"yarn watch\"",
    "test": "concurrently --passthrough-arguments --kill-others --success first \"yarn test-redis\" \"jest --forceExit -t='${*}'\""
  }
}