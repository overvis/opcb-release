{
  "name": "@overvis/opcb-tasks",
  "version": "0.0.1",
  "license": "private",
  "private": true,
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.10.2",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "pino": "^8.10.0",
    "pino-pretty": "^9.4.0",
    "ts-jest": "^29.0.5",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.6.2",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@overvis/opcb-ts-shared": "*",
    "@sinclair/typebox": "^0.25.24"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo || true",
    "dev": "cd ../opcb-tasks-lib && yarn build && cd ../opcb-ts-shared && yarn init-localdev-sqlite ../opcb-tasks/fixtures/tasks && cd ../opcb-tasks && concurrently --kill-others \"yarn dev:redis\" \"yarn dev:watch\"",
    "dev:watch": "tsc-watch -b -w --preserveWatchOutput --onSuccess \"yarn dev:start\"",
    "dev:start": "node --inspect=0.0.0.0:19207 dist/start",
    "dev:redis": "docker run --rm --mount type=bind,source=$PWD/dev-redis.conf,destination=/redis.conf -p 6379:6379 --name opcb-tasks-test-redis redis:7 /redis.conf",
    "test": "concurrently --passthrough-arguments --kill-others --success first \"yarn dev:redis\" \"jest --forceExit -t='${*}'\""
  }
}