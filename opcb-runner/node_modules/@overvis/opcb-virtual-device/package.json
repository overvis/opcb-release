{
  "name": "@overvis/opcb-virtual-device",
  "version": "0.0.1",
  "license": "private",
  "private": true,
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.13.0",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "pino": "^8.10.0",
    "pino-pretty": "^9.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@overvis/opcb-ts-shared": "*",
    "@overvis/server-tools": "*",
    "@sinclair/typebox": "^0.25.24",
    "better-sqlite3": "^8.3.0"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo || true",
    "watch": "nodemon ./src/start.ts",
    "test-redis": "docker run --rm --mount type=bind,source=$PWD/../opcb-deploy/dev/redis.conf,destination=/redis.conf -p 6379:6379 --name opcb-virtual-device-test-redis redis:7 /redis.conf",
    "dev": "concurrently --kill-others \"yarn test-redis\" \"yarn watch\"",
    "test": "concurrently --passthrough-arguments --kill-others --success first \"yarn test-redis\" \"jest --forceExit -t='${*}'\""
  }
}