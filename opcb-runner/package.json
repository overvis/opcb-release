{
  "name": "@overvis/opcb-runner",
  "version": "0.0.1",
  "license": "private",
  "private": true,
  "main": "dist/index",
  "types": "dist/index",
  "bin": "dist/start",
  "files": [
    "dist/**/*",
    "runner-config.schema.json"
  ],
  "dependencies": {
    "@overvis/opcb-api": "*",
    "@overvis/opcb-config-manager": "*",
    "@overvis/opcb-linux-operator": "*",
