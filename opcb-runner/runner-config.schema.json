{
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "sentry": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "dsn": {
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "dsn"
            ]
        },
        "logLevel": {
            "anyOf": [
                {
                    "const": "trace",
                    "type": "string"
                },
                {
                    "const": "debug",
                    "type": "string"
                },
                {
                    "const": "info",
                    "type": "string"
                },
                {
                    "const": "warn",
                    "type": "string"
                },
                {
                    "const": "error",
                    "type": "string"
                }
            ]
        },
        "paths": {
            "additionalProperties": true,
            "type": "object",
            "properties": {
                "manufacturerFile": {
                    "default": "../MANUFACTURER_LICENSE",
                    "type": "string"
                },
                "configFile": {
                    "default": "../user/config.json",
                    "type": "string"
                },
                "factoryConfigFile": {
                    "default": "../user/factory-config.json",
                    "type": "string"
                },
                "opcbRs485TtyOperatorBin": {
                    "default": "../bin/opcb-rs485-tty-operator",
                    "type": "string"
                },
                "opcbModbusTcpClientBin": {
                    "default": "../bin/opcb-modbus-tcp-client",
                    "type": "string"
                },
                "opcbModbusTcpServerBin": {
                    "default": "../bin/opcb-modbus-tcp-server",
                    "type": "string"
                },
                "opcbOvervisRcClientBin": {
                    "default": "../bin/opcb-overvis-rc-client",
                    "type": "string"
                },
                "redisBinary": {
                    "default": "../bin/redis-server",
                    "type": "string"
                },
                "redisConfig": {
                    "default": "../redis.conf",
                    "type": "string"
                },
                "redisSocket": {
                    "default": "/tmp/opcb-redis.sock",
                    "type": "string"
                },
                "staticFilesDir": {
                    "default": "../http-static",
                    "type": "string"
                },
                "sqliteDbPath": {
                    "default": "../user/opcb.sqlite3",
                    "type": "string"
                },
                "sqliteLibDir": {
                    "default": "../bin",
                    "type": "string"
                },
                "sqliteMemDbPath": {
                    "default": "../user/opcb-mem.sqlite3",
                    "type": "string"
                },
                "labelFile": {
                    "default": "../user/label.png",
                    "type": "string"
                },
                "changelogFile": {
                    "default": "../CHANGELOG.md",
                    "type": "string"
                }
            },
            "required": [
                "manufacturerFile",
                "configFile",
                "factoryConfigFile",
                "redisBinary",
                "redisConfig",
                "redisSocket",
                "staticFilesDir",
                "sqliteDbPath",
                "sqliteLibDir",
                "sqliteMemDbPath",
                "labelFile",
                "changelogFile"
            ]
        }
    },
    "required": [
        "logLevel",
        "paths"
    ]
}